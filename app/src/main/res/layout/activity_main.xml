<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"/>

    <Button
        android:id="@+id/btnAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alunos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProfessores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAlunos" />

    <Button
        android:id="@+id/btnCursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cursos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnProfessores" />

    <Button
        android:id="@+id/btnMaterias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
